<div class="col-xs-12 swipeContainer">
	<div class="gifBox">
		<%= image_tag "http://placehold.it/300x300", :class => "showGif", :id => "showImg"  %>
		<h4 id="showGenre"></h4>
	</div>
	<div class="infoBox">
		<div class="col-xs-12">
			<div class="profilePic">
			</div>
			<h3 id="showTitle"></h3> 
			<h4> <b>Jill Murray</b> "This app is awesome!"</h4>
		</div>
	</div>	
</div>


<div class="col-xs-12 dPad">
	<div class="row1">
		<%= image_tag "play.svg", :class => "play" %>
	</div>
	<div class="row2">
		<%= image_tag "noLike.svg", :class => "noLike" %>
		<%= image_tag "info.svg", :class => "info" %>
		<%= image_tag "like.svg", :class => "like" %>
	</div>
	<div class="row3">
		<%= image_tag "watched.svg", :class => "watched" %>
	</div>
</div>


